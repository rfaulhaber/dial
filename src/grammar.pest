number = @{ '0'..'9'+ }
operator = _{ add | subtract | multiply | divide | power }
    add      = { "+" }
    subtract = { "-" }
    multiply = { "*" }
    divide   = { "/" }
    power    = { "^" }
expr = { number | "(" ~ operator ~ expr+ ~ ")"}
statement = _{ expr }
repl_line = _{ statement | COMMENT }

WHITESPACE = _{ " " }
COMMENT = @{ ";" ~ ANY* }
atmosphere = _{ WHITESPACE | COMMENT }
